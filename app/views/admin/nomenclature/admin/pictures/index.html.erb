<% render :partial => '/admin/navigations/items' %>
<% title "Pictures" %>

<table>
  <tr>
    <th><%= t("Name", :scope => [:admin]) %></th>
    <th>Description</th>
    <th>Picture Filename</th>
    <th>Picture Content Type</th>
    <th>Picture File Size</th>
    <th>Imagable Type</th>
    <th>Imagable</th>
  </tr>
  <% for picture in @pictures %>
    <tr>
      <td><%=h link_to image_tag("edit.png", :class => :icon) + picture.name, edit_admin_picture_path(picture) %></td>
      <td><%=h picture.description %></td>
      <td><%=h picture.picture_filename %></td>
      <td><%=h picture.picture_content_type %></td>
      <td><%=h picture.picture_file_size %></td>
      <td><%=h picture.imagable_type %></td>
      <td><%=h picture.imagable_id %></td>
      <td width="31"><%= link_to t("Show",:scope => [:admin]), [:admin, picture] %></td>
      <td width="37"><%= link_to t("Delete", :scope =>[:admin, :dashboard]), [:admin, picture], :confirm => t('Are you sure?'), :method => :delete, :class => "action delete" %></td>
    </tr>
  <% end %>
</table>
<br />
<p><%= link_to "Add Picture", new_admin_picture_path,
          :class => "action new" %>
  
</p>
